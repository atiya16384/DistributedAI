<?xml version="1.0" encoding="UTF-8"?>

<routes>
    <!-- Define vehicle types -->
    <vType id="car" accel="1.0" decel="5.0" sigma="0.5" length="5" maxSpeed="20" color="red" lcStrategic="1"/>
    <vType id="bus" accel="0.8" decel="4.0" sigma="0.5" length="12" maxSpeed="15" color="blue" lcStrategic="1"/>
    <vType id="truck" accel="0.6" decel="3.5" sigma="0.5" length="10" maxSpeed="18" color="yellow" lcStrategic="1"/>

    <!-- Define valid routes using actual network edges -->
    <route id="route_1" edges="northMiddle___intersectionN intersectionN___intersectionCenter intersectionCenter___intersectionS"/>
    <route id="route_2" edges="westMiddle___intersectionW intersectionW___intersectionCenter intersectionCenter___intersectionE"/>
    <route id="route_3" edges="southMiddle___intersectionS intersectionS___intersectionCenter intersectionCenter___intersectionN"/>

    <!-- Add continuous vehicle flows -->
    <flow id="flow_1" type="car" route="route_1" begin="0" end="1000" vehsPerHour="1200"/>
    <flow id="flow_2" type="bus" route="route_2" begin="0" end="1000" vehsPerHour="400"/>
    <flow id="flow_3" type="truck" route="route_3" begin="0" end="1000" vehsPerHour="500"/>
</routes>
